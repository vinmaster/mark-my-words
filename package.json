{
  "private": true,
  "name": "mark-my-words",
  "version": "1.0.0",
  "scripts": {
    "loadtest": "colyseus-loadtest loadtest/example.ts --room my_room --numClients 2",
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-client": "vite build --config vite.config.ts --ssrManifest",
    "build-server": "tsc && node node_modules/copyfiles/copyfiles package.json ./build && node node_modules/copyfiles/copyfiles arena.env ./build",
    "clean": "node node_modules/rimraf/bin build",
    "dev": "concurrently \"npm:dev-*\"",
    "dev-client": "vite --config vite.config.ts",
    "dev-server": "ts-node-dev --respawn --transpile-only server/index.ts",
    "test": "mocha --require ts-node/register test/**_test.ts --exit --timeout 15000"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.14.4",
    "@colyseus/testing": "^0.14.21",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mocha": "^8.2.3",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "mocha": "^9.0.2",
    "rimraf": "^2.7.1",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.63"
  },
  "dependencies": {
    "@colyseus/arena": "^0.14.22",
    "@colyseus/monitor": "^0.14.20",
    "@vitejs/plugin-vue": "^4.0.0",
    "colyseus": "^0.14.20",
    "cors": "^2.8.5",
    "daisyui": "^2.49.0",
    "express": "^4.16.4",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  }
}
